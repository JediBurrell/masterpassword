<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <include
        android:id="@id/rvfs_scroll_bar_handle_container"
        layout="@layout/rvfs_default_vertical_bar_handle_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/rvfs_scroll_section_indicator"
        android:layout_toRightOf="@id/rvfs_scroll_section_indicator" />

    <de.devland.masterpassword.ui.passwordlist.CardSectionIndicator
        android:id="@id/rvfs_scroll_section_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:elevation="8sp"
        custom:rvfs_backgroundColor="@color/accent"

        custom:rvfs_textColor="@android:color/white" />
</RelativeLayout>