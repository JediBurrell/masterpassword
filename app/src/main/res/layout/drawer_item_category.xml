<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageView_categoryCircle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/category_circle"/>

    <TextView
        android:id="@+id/textView_categoryLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_categoryCircle"
        android:layout_alignTop="@+id/imageView_categoryCircle"
        android:layout_alignRight="@+id/imageView_categoryCircle"
        android:layout_alignBottom="@+id/imageView_categoryCircle"
        android:layout_margin="1dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        tools:text="A"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/textView_settingsItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView_categoryCircle"
        android:layout_toRightOf="@+id/imageView_categoryCircle"
        android:layout_toLeftOf="@+id/imageView_deleteCategory"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="@color/text"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_category_delete"
        android:id="@+id/imageView_deleteCategory"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>


